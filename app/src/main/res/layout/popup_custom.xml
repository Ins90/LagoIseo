    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageT"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_satellite_white_36dp"
            android:layout_column="1"
            android:padding="5dp"
            android:background="@color/blue_500"
            android:layout_span="2" />

        <TextView
            android:id="@+id/textT"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/map_sat"
            android:textSize="15sp"
            android:layout_column="3"
            android:paddingLeft="7dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_street_white_36dp"
            android:layout_column="1"
            android:background="@color/blue_500"
            android:padding="5dp" />

        <TextView
            android:id="@+id/textS"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#727272"
            android:text="@string/map_str"
            android:layout_column="3"
            android:textSize="15sp"
            android:paddingLeft="7dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageZoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_gps_fixed_white_36dp"
            android:layout_column="1"
            android:background="@color/blue_500"
            android:padding="5dp" />

        <TextView
            android:id="@+id/textZoom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#727272"
            android:text="@string/zoom_iseo"
            android:layout_column="3"
            android:textSize="15sp"
            android:paddingLeft="7dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/image0star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/class_legend_4"
            android:layout_column="1"
            android:background="@color/blue_500"
            android:padding="5dp" />

        <TextView
            android:id="@+id/text0star"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#727272"
            android:text="@string/qlt_sca"
            android:layout_column="3"
            android:textSize="15sp"
            android:paddingLeft="7dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/image1star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/class_legend_3"
            android:cropToPadding="true"
            android:layout_column="1"
            android:background="@color/blue_500"
            android:padding="5dp"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/text1star"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#727272"
            android:text="@string/qlt_suf"
            android:layout_column="3"
            android:textSize="15sp"
            android:paddingLeft="7dp" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/image2star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/class_legend_2"
            android:layout_column="1"
            android:background="@color/blue_500"
            android:padding="5dp" />

        <TextView
            android:id="@+id/text2star"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#727272"
            android:text="@string/qlt_buo"
            android:layout_column="3"
            android:textSize="15sp"
            android:paddingLeft="7dp" />
    </TableRow>

    <TableRow
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/image3star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/class_legend_1"
        android:layout_column="1"
        android:background="@color/blue_500"
        android:padding="5dp" />

    <TextView
        android:id="@+id/text3star"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#727272"
        android:text="@string/qlt_ecc"
        android:layout_column="3"
        android:textSize="15sp"
        android:paddingLeft="7dp" />
</TableRow><TableRow
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imageDivieto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/divieto_legend"
        android:layout_column="1"
        android:background="@color/blue_500"
        android:padding="5dp" />

    <TextView
        android:id="@+id/textDivieto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#727272"
        android:text="@string/prohibition"
        android:layout_column="3"
        android:textSize="15sp"
        android:paddingLeft="7dp" />
</TableRow>

</TableLayout>